{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	- Accueil
{% endblock %}

{% block body %}
	<div class="row justify-content-center align-content-between mt-4 px-2" id="tricksContainer">
		{% for trick in tricks %}
			<div class="col-lg-2 card m-2 p-0">
				{% include "parts/_trick_card.html.twig" with { trick } %}
			</div>
		{% else %}
			
		{% endfor %}
	</div>

	<div class="row justify-content-center align-content-between">
		<div class="col-lg-12 my-4">
			<button type="button" class="btn btn-secondary m-1" data-controller="loadmore">Load more</button>
		</div>
	</div>

	<a href="#top" class="position-absolute bottom-0 end-0 btn btn-secondary m-4">
		<i class="fas fa-chevron-up"></i>
	</a>

	{% include "parts/_trick_delete_modal.html.twig" %}
{% endblock %}
