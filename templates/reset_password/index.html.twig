{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	- Réinitialiser le mot de passe
{% endblock %}

{% block body %}
	<article class="container m-0 p-0 text-center translate-middle-y" style="margin-top: -50vh !important; max-height: 375px; max-width: 400px;">
		<form action="{{ path('reset_password_form', {'token': token}) }}" method="post" class="w-100 h-100">
			<div class="bg-alpha p-2">
				<h1 class="my-3">Réinitialiser le mot de passe</h1>
				<div class="form-group my-3">
					<label for="username" class="fs-5">Nom d'utilisateur</label>
					<input type="text" class="form-control my-1" id="username" name="username" placeholder="Nom d'utilisateur" required="">
				</div>
				<div class="form-group my-3">
					<label for="password" class="fs-5">Mot de passe</label>
					<input type="password" class="form-control my-1" id="password" name="password" placeholder="Mot de passe" required="">
				</div>
				<div class="form-group my-3">
					<button type="submit" class="btn btn-primary text-light">Réinitialiser le mot de passe</button>
				</div>
			</div>
		</form>
	</article>
{% endblock %}
