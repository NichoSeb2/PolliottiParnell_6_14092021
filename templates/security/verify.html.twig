{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	- Vérification de compte
{% endblock %}

{% block body %}
	<article class="container m-0 p-0 text-center translate-middle-y" style="margin-top: -50vh !important; max-height: 375px; max-width: 400px;">
		<form class="w-100 h-100 d-flex flex-column justify-content-center">
			<div class="bg-alpha p-2">
				<h2 class="my-3">Vérification de compte</h2>

				{% if success is defined %}
					<div class="alert alert-success">
						{{ success|nl2br }}
						<br><br>
						<a href="{{ path('app_login') }}" class="link-success">Se connecter</a>
					</div>
				{% endif %}

				{% if error is defined %}
					<div class="alert alert-danger">
						{{ "form.verify.errors.bad-token"|trans({}, 'validators')|nl2br }}
						<br><br>
						{{ "form.verify.errors.account-already-verified"|trans({}, 'validators')|nl2br }}
						<br>
						<a href="{{ path('app_login') }}" class="link-danger">Se connecter</a>
						<br><br>
						{{ "form.verify.errors.resend-link"|trans({}, 'validators')|nl2br }}
						<br>
						<a href="{{ path('app_verify_resend') }}" class="link-danger">Demander un nouveau lien</a>
					</div>
				{% endif %}
			</div>
		</form>
	</article>
{% endblock %}
