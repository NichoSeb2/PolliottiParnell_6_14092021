{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	- Mot de passe oublié
{% endblock %}

{% block body %}
	<article class="container m-0 p-0 text-center translate-middle-y" style="margin-top: -50vh !important; max-height: 225px; max-width: 400px;">
		<form action="{{ path('forgot_password_form') }}" method="post" class="bg-alpha w-100 h-100 p-2">
			<h1 class="my-3">Mot de passe oublié</h1>
			<div class="form-group my-3">
				<label for="username" class="fs-5">Nom d'utilisateur</label>
				<input type="text" class="form-control my-1" id="username" name="username" placeholder="Nom d'utilisateur" required="">
			</div>
			<div class="form-group my-3">
				<button type="submit" class="btn btn-primary text-light w-100">Demander la réinitialisation du mot de passe</button>
			</div>
		</form>
	</article>
{% endblock %}
